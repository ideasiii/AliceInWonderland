<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutPasswordMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/password1_1"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editTextKey1"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/input1_1"
            android:contentDescription="@string/content_description"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:padding="10dp"
            android:textSize="32sp"
            android:textStyle="bold" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editTextKey2"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/input1_1"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="32sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextKey3"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/input1_1"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="32sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonKeyInput"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/key_26"
        android:contentDescription="@string/content_description"
        android:scaleType="fitCenter" />

</LinearLayout>