<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </FrameLayout>

        <ImageView
            android:id="@+id/imageViewCameraRabbit"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/content_description"
            android:scaleType="centerInside"
            android:src="@drawable/camera_rabbit2" />

        <LinearLayout
            android:id="@+id/linearLayoutBarUnderbox"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/style_edit_text"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/imageViewGameraUnderLogo"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/content_description"
                android:src="@drawable/init_logo" />

            <TextView
                android:id="@+id/textViewCameraFinishTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/finish_bar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageViewCameraCapture"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:contentDescription="@string/content_description"
        android:scaleType="centerInside"
        android:src="@drawable/camera2" />

</LinearLayout>